<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kiểm tra IP và Địa chỉ Người dùng</title>
    <!-- Tải Tailwind CSS để tạo kiểu dáng hiện đại -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Thiết lập font Inter cho toàn bộ trang và màu nền gradient */
        body {
            font-family: "Inter", sans-serif;
            /* Tạo hiệu ứng gradient từ xanh lam sang tím ở nền */
            @apply bg-gradient-to-br from-blue-500 to-purple-600 min-h-screen flex items-center justify-center p-4;
        }
        /* Định nghĩa kiểu cho thẻ thông tin chính */
        .card {
            /* Nền trắng với độ trong suốt nhẹ, hiệu ứng blur, bo góc tròn, đổ bóng */
            @apply bg-white bg-opacity-90 backdrop-blur-md rounded-2xl shadow-xl p-8 max-w-lg w-full text-center transform transition-all duration-300 hover:scale-105;
        }
        /* Định nghĩa kiểu cho biểu tượng tải (loading spinner) */
        .loading-spinner {
            border: 4px solid rgba(0, 0, 0, 0.1);
            border-left: 4px solid #3b82f6; /* Màu xanh lam (blue-500) */
            border-radius: 50%; /* Tạo hình tròn */
            width: 24px;
            height: 24px;
            animation: spin 1s linear infinite; /* Áp dụng hiệu ứng quay */
        }
        /* Định nghĩa keyframes cho hiệu ứng quay */
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="card">
        <h1 class="text-4xl font-extrabold text-gray-800 mb-6 drop-shadow-md">Kiểm tra IP và Địa chỉ</h1>

        <!-- Khu vực hiển thị thông tin IP và vị trí -->
        <div id="ip-info" class="text-gray-700 text-lg">
            <p class="mb-4">Đang tải thông tin IP và địa chỉ của bạn...</p>
            <div class="loading-spinner mx-auto"></div>
        </div>

        <!-- Thông báo lỗi (sẽ hiển thị khi có sự cố) -->
        <div id="error-message" class="hidden mt-4 text-red-600 text-base font-semibold">
            Đã xảy ra lỗi khi tải thông tin. Vui lòng thử lại sau.
        </div>
    </div>

    <script>
        // Lấy các phần tử HTML cần thao tác thông qua ID của chúng
        const ipInfoDiv = document.getElementById('ip-info');
        const errorMessageDiv = document.getElementById('error-message');

        /**
         * @brief Hiển thị thông báo lỗi và ẩn các nội dung khác.
         * @param {string} message Tin nhắn lỗi để hiển thị.
         */
        function showErrorMessage(message = 'Đã xảy ra lỗi khi tải thông tin. Vui lòng thử lại sau.') {
            ipInfoDiv.innerHTML = `<p class="text-red-600">${message}</p>`; // Cập nhật nội dung lỗi
            errorMessageDiv.classList.remove('hidden'); // Hiển thị div lỗi
        }

        /**
         * @brief Hàm chính để lấy thông tin IP và vị trí địa lý của người dùng từ API.
         * Sử dụng API miễn phí từ ip-api.com.
         */
        async function getIpAndLocation() {
            try {
                // Gửi yêu cầu fetch tới API ip-api.com (sử dụng HTTPS)
                // Chỉ yêu cầu các trường thông tin cần thiết để giảm tải
                const response = await fetch('https://ip-api.com/json/?fields=status,message,query,country,countryCode,region,regionName,city,zip,lat,lon,timezone,isp,org,as,mobile,proxy,hosting');

                // Kiểm tra nếu phản hồi không thành công (ví dụ: lỗi mạng, lỗi máy chủ)
                if (!response.ok) {
                    throw new Error(`Lỗi HTTP: ${response.status}`);
                }

                const data = await response.json(); // Phân tích phản hồi JSON

                // Kiểm tra trạng thái phản hồi từ API ip-api.com
                if (data.status === 'success') {
                    // Cập nhật nội dung của div ip-info với dữ liệu nhận được
                    ipInfoDiv.innerHTML = `
                        <p class="mb-2"><span class="font-bold">Địa chỉ IP:</span> <span class="text-blue-600">${data.query}</span></p>
                        <p class="mb-2"><span class="font-bold">Quốc gia:</span> ${data.country} (${data.countryCode})</p>
                        <p class="mb-2"><span class="font-bold">Vùng/Tỉnh:</span> ${data.regionName}</p>
                        <p class="mb-2"><span class="font-bold">Thành phố:</span> ${data.city}</p>
                        <p class="mb-2"><span class="font-bold">Múi giờ:</span> ${data.timezone}</p>
                        <p class="mb-2"><span class="font-bold">Nhà cung cấp dịch vụ Internet (ISP):</span> ${data.isp}</p>
                        <p class="mb-2"><span class="font-bold">Tổ chức:</span> ${data.org}</p>
                        <p class="mb-2"><span class="font-bold">Tọa độ:</span> ${data.lat}, ${data.lon}</p>
                    `;
                    errorMessageDiv.classList.add('hidden'); // Ẩn thông báo lỗi nếu trước đó có lỗi
                } else {
                    // Nếu API trả về trạng thái lỗi (ví dụ: giới hạn số lượng request)
                    console.error('Lỗi từ API ip-api.com:', data.message);
                    showErrorMessage(`Lỗi từ dịch vụ IP: ${data.message || 'Không xác định.'}`);
                }
            } catch (error) {
                // Bắt các lỗi xảy ra trong quá trình fetch hoặc xử lý dữ liệu
                console.error('Lỗi khi lấy thông tin IP:', error);
                showErrorMessage('Không thể kết nối đến dịch vụ IP hoặc có lỗi mạng. Vui lòng kiểm tra kết nối Internet của bạn.');
            }
        }

        // Gọi hàm getIpAndLocation khi toàn bộ trang web đã được tải xong
        window.onload = getIpAndLocation;
    </script>
</body>
</html>
